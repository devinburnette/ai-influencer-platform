# AI Influencer Platform Environment Variables

# Application
SECRET_KEY=change-this-to-a-secure-random-string
DEBUG=false

# Database (used by Docker Compose)
DATABASE_URL=postgresql://aip_user:aip_password@localhost:5432/ai_influencer

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (at least one required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Twitter / X API
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Meta/Instagram API (optional - for Graph API)
META_APP_ID=
META_APP_SECRET=

# Rate Limits (per persona per day)
MAX_POSTS_PER_DAY=3
MAX_LIKES_PER_DAY=100
MAX_COMMENTS_PER_DAY=30
MAX_FOLLOWS_PER_DAY=20

# Action Timing (seconds) - adds human-like variance
MIN_ACTION_DELAY=30
MAX_ACTION_DELAY=300

# AI Image and Video generation
HIGGSFIELD_API_KEY=your-api-key-here
HIGGSFIELD_CHARACTER_ID=your-character-id-for-soul-model
