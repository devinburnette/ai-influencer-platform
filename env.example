# AI Influencer Platform - Environment Configuration
# Copy this file to .env and fill in your values
# Required variables are marked with (REQUIRED)

# ============================================
# APPLICATION SETTINGS
# ============================================

# (REQUIRED) Secret key for session security - generate a random string
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars

# Debug mode - set to false in production
DEBUG=false

# CORS allowed origins (comma-separated for multiple)
# Example: http://localhost:3000,https://your-domain.com
CORS_ORIGINS=http://localhost:3000

# ============================================
# DATABASE (Used by Docker Compose - usually no changes needed)
# ============================================

DATABASE_URL=postgresql://aip_user:aip_password@postgres:5432/ai_influencer

# ============================================
# REDIS (Used by Docker Compose - usually no changes needed)
# ============================================

REDIS_URL=redis://redis:6379/0

# ============================================
# AI PROVIDERS (At least one REQUIRED)
# ============================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key - Get from https://console.anthropic.com/
# Recommended for better content generation
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Default AI Provider for new personas (openai or anthropic)
DEFAULT_AI_PROVIDER=anthropic

# ============================================
# TWITTER/X API (Required for Twitter integration)
# Get from https://developer.twitter.com/en/portal/dashboard
# ============================================

# Consumer Keys (API Key and Secret)
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Authentication Tokens
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Bearer Token (for read-only operations)
TWITTER_BEARER_TOKEN=

# ============================================
# META/INSTAGRAM API (Optional - for Graph API)
# Get from https://developers.facebook.com
# ============================================

META_APP_ID=
META_APP_SECRET=

# Facebook Graph API version (update if API version changes)
META_GRAPH_API_VERSION=v18.0

# ============================================
# HIGGSFIELD IMAGE GENERATION (Optional)
# Get from https://docs.higgsfield.ai/
# Used for AI-generated images to accompany posts
# ============================================

HIGGSFIELD_API_KEY=
HIGGSFIELD_API_SECRET=

# Default character ID for image generation (can be set per persona)
HIGGSFIELD_CHARACTER_ID=

# ============================================
# RATE LIMITS (Per persona per day)
# Adjust based on platform limits and your needs
# ============================================

# Maximum posts per day per persona
MAX_POSTS_PER_DAY=3

# Maximum likes per day per persona
MAX_LIKES_PER_DAY=100

# Maximum comments per day per persona
MAX_COMMENTS_PER_DAY=30

# Maximum follows per day per persona
MAX_FOLLOWS_PER_DAY=20

# ============================================
# ACTION TIMING (Seconds)
# Adds human-like variance between automated actions
# ============================================

# Minimum delay between actions
MIN_ACTION_DELAY=30

# Maximum delay between actions
MAX_ACTION_DELAY=300

# ============================================
# SCHEDULING (24-hour format, UTC)
# ============================================

# Hour to run daily content generation (0-23)
CONTENT_GENERATION_HOUR=6

# Hour to run daily analytics sync (0-23)
ANALYTICS_SYNC_HOUR=4

# How often to run engagement cycles (in minutes)
ENGAGEMENT_INTERVAL_MINUTES=30

# ============================================
# OPTIONAL: DEVELOPMENT SETTINGS
# ============================================

# Frontend API URL (for dashboard development)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

