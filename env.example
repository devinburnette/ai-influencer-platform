# AI Influencer Platform Environment Variables

# Application
SECRET_KEY=change-this-to-a-secure-random-string
DEBUG=false

# Database (used by Docker Compose)
DATABASE_URL=postgresql://aip_user:aip_password@localhost:5432/ai_influencer

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (at least one required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Default AI Provider (openai or anthropic)
DEFAULT_AI_PROVIDER=openai

# Meta/Instagram API (optional - for Graph API)
META_APP_ID=
META_APP_SECRET=

# Twitter/X API (get from https://developer.twitter.com/en/portal/dashboard)
# Required for Twitter integration
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Rate Limits (per persona per day)
MAX_POSTS_PER_DAY=3
MAX_LIKES_PER_DAY=100
MAX_COMMENTS_PER_DAY=30
MAX_FOLLOWS_PER_DAY=20

# Action Timing (seconds) - adds human-like variance
MIN_ACTION_DELAY=30
MAX_ACTION_DELAY=300

